<div class="container">
  <h2>
    <%= @customer.last_name %>
    <%= @customer.first_name %>
    さんの会員情報編集
  </h2>

  <%= form_with model: @customer do |f| %>

  <h6>会員ID</h6>
    <%= f.id %>

  <h6>氏名</h6>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>

  <h6>フリガナ</h6>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>

  <h6>郵便番号</h6>
    <%= f.text_field :postal_code %>

  <h6>住所</h6>
    <%= f.text_area :address %>

  <h6>電話番号</h6>
    <%= f.text_area :telephone_number %>

  <h6>メールアドレス</h6>
    <%= f.text_area :email %>

  <h6>会員ステータス</h6>
    <%= f.radio_button :is_deleted, "true" %>
    <%= label :is_deleted, "有効", value: true %>
    <%= f.radio_button :is_deleted, "false" %>
    <%= label :is_deleted, "退会", value: false %>

    <%= f.submit "変更を保存" %>

</div>
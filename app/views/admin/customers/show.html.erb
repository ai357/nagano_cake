<div class="container">
  <h2><%= @customer.name %>さんの会員詳細</h2>

  <table>
    <thead>
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.first_name %>
            <%= @customer.last_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%=@customer.first_name_kana %>
            <%= @customer.last_name_kane %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_deleted == false %>
            退会
            <% else %>
            有効
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to  "編集する", edit_admin_customer_path class: "btn btn-success" %>
          </td>
          <td>
            <%= link_to "注文履歴一覧を見る", admin_homes_top_path class: "btn btn-primary" %>
          </td>
        </tr>
      </tbody>
    </thead>
  </table>
</div>
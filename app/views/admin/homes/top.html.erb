<div class="container">
  <h2>注文履歴一覧</h2>

  <table class = "table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
        <tbody class = "table">
          <% @orders.each do |order| %>
          <tr>
          <td>
            <%= order.created_at  %>
          </td>
          <td>
            <%= order.customer.name %>
          </td>
          <td>
            <%= order.order_details.each do |order_detail| %>
            
          </td>
          <td>
            <%= order.status %>
          </td>
          </tr>
          <% end %>
        </tbody>
          <%= paginate @order_detail_page %>
  </table>
</div>


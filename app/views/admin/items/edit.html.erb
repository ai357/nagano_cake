<div class="container">
  <h2>商品編集</h2>

  <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>

    <h6>商品画像</h6>
      <%= f.file_field :image, accept: "image/*" %>

    <h6>商品名</h6>
      <%= f.text_field :name %>

    <h6>商品説明</h6>
      <%= f.text_area :introduction %>

    <h6>ジャンル</h6>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
      <!--<%#= f.text_field :Item.genre.name %>-->

    <h6>税抜価格</h6>
      <%= f.text_field :price %>

    <h6>販売ステータス</h6>
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active, "販売中", value: true %>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active, "販売停止中", value: "false" %></br>

      <!--<button type=submit class="btn btn-success">変更を保存</button>-->
      <%= f.submit "変更を保存", class: "btn btn-success" %>
  <% end %>


</div>
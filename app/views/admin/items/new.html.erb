<div class="container">

  <h2>商品新規登録</h2>
  
   <!--URLはクリエイトアクションにつながってる-->
  <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
  
    <h6>商品画像</h6>
    <%= f.file_field :image, accept: "image/*" %>
  
    <h6>商品名</h6>
    <%= f.text_field :name %>
  
    <h6>商品説明</h6>
    <%= f.text_area :introduction %>
  
    <h6>ジャンル</h6>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
  
    <h6>税抜価格</h6>
    <%= f.number_field :price %>円
  
    <h6>販売ステータス</h6>
    <%= f.label :is_active, '販売中', value: true %>
    <%= f.radio_button :is_active, "true" %>
    <%= f.label :is_active, '販売停止中', value: false %>
    <%= f.radio_button :is_active, "false" %></br>
  
    <button type=submit class="btn btn-success">新規登録</button>
  
  <% end %>

</div>


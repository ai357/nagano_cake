<div class = "container ">
  <h2>商品詳細</h2>
    <div class ="row">
      <div class ="col-4">
        <%= image_tag @item.get_image(200,300) %>
      </div>
      <div class = "col-8">
        <table class = "table table-borderless">
          <tr>
           <td>商品名</td>
           <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格) </td>
            <td><%= @price %></br>(<%= @item.price %>)</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        </table>
      </div>
        <div>
          <%= link_to "編集する", edit_admin_item_path %>
        </div>
    </div>
</div>


<div class = "container ">
  <h2>商品詳細</h2>
    <div class ="row">
      <div class ="col-4">
        <%=image_tag @item.get_item_image(100,150) %>
      </div>
      <div class = "col-8">
        <table class="table table-borderless">
          <tr>
           <td>商品名</td>
           <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td><%= @item.is_active %></td>
          </tr>
      </div>
        <div class = "actions">
          <%= submit "編集する" %>
        </div>
    </div>
</div>
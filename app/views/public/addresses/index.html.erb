<div class="container">
    <h2>配送先登録/一覧</h2>
  <div class="row">
    <div class="col-12">
      <%= form_with model: @address, url: addresses_path do |f| %>
        <div class="field">
          <div class="row">
            <div class="col-3">郵便番号（ハイフンなし）</div>
            <%= f.number_field :postal_code %></br>
          </div>
        </div>
        <div class="field">
          <div class="row">
            <div class="col-3">住所</div>
            <%= f.text_field :address %></br>
          </div>
        </div>
        <div class="field">
          <div class="row">
            <div class="col-3">宛名</div>
            <%= f.text_field :name %>
          </div>
        </div>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <td>郵便番号</td>
          <td>住所</td>
          <td>宛名</td>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td>
            <%= address.postal_code %>
          </td>
          <td>
            <%= address.address %>
          </td>
          <td>
            <%= address.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
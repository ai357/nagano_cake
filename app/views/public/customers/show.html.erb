<div class="container">
  <h2>マイページ</h2>
    登録情報
    <%= link_to "編集する" , customers_information_edit_path, class: "btn btn-success" %>
    </br>
    </br>
    
  <div class="row">  
    <table class = "table">
      <tbody>
        <tr>
          <td>氏名</td>
          <td>
            <span class="name"><%= @customer.last_name %></span>
            <span class="name"><%= @customer.first_name %></span>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <span class="name"><%= @customer.last_name_kana %></span>
            <span class="name"><%= @customer.first_name_kana %></span>
          </td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td>
            <span><%= @customer.postal_code %></span>
          </td>
        </tr>
        <tr>
          <td>住所</td>
          <td>
            <%= @customer.address %>
          </td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td>
            <span><%= @customer.telephone_number%></span>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td>
            <span><%= @customer.email %></span>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <label>配送先</label>
  <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
  </br>
  </br>
  <lable>注文履歴</lable>
  <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
</div>

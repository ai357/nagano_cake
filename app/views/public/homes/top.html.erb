<div class="container">
　<div class="row">
    <div col>
      <p>ジャンル検索</p>
      <table class = "table">
          <tbody>
            <% @genre.each do |genre| %>
            <tr>
              <td>
              <%= genre.name %>
              </td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>





    <h3>新着商品</h3>
    <div class = "row">
      <% @item.each do |item| %>
    <div class = "col-2">
        <%= image_tag item.get_image(100,150) %>
        商品名
        ¥<%= item.price %>
    </div>
      <% end %>


    </div>
  </div>
</div>

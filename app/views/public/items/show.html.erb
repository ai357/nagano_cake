<div class="container">
　<div class="row">
    <div class="col-md-2">
      <p>ジャンル検索</p>
      <table class = "table">
          <tbody>
            <% @genre.each do |genre| %>
            <tr>
              <!--tdはtable_dateの略-->
              <td>
              <%= genre.name %>
              </td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
    
    <div class="col-md-9">
        <%= image_tag @item.get_image(100,150) %>
        <h2><%= @item.name %></h2></br>
        <%= @item.introduction %></br>
        ¥<%= @item.price %>
        <% select_tag ('個数', option_tags = nil, options = {1,2,3,4,5,6,7,8,9}) %>

      </div>
    </div>
  </div>
</div>  
  
<div class="container">
　<div class="row">
    <div class="col-md-2">
      <p>ジャンル検索</p>
      <table class = "table">
          <tbody>
            <% @genre.each do |genre| %>
            <tr>
              <!--tdはtable_dateの略-->
              <td>
              <%= genre.name %>
              </td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>

    <div class="col-md-3">
        <%= image_tag @item.get_image(100,150) %>
    </div>
    <div class="col-md-6">
        <h2><%= @item.name %></h2></br>
        <%= @item.introduction %></br>
        ¥<%= (@item.price*1.1).round %>(税込）
        <%= form_with model: @cart_item, url: cart_items_path do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.select :amount, *[1..3] %>
        <%= f.submit "カートに入れる", class: "btn btn-success" %>
        <% end %>

      </div>
    </div>
  </div>
</div>

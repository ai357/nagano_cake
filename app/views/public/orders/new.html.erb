<div class="container">
  <h2>注文情報入力</h2>

  <p>支払方法</p>
    <%= form_with model: Order do |f| %>
      <%= f.radio_button :payment_method, "true" %>
      <%= label :payment_method, "クレジットカード", value: true %>
      <%= f.radio_button :payment_method, "false" %>
      <%= label :payment_method, "銀行振込", value: false %>
    <% end %>

  <p>お届け先</p>
    <%= form_with model: Order do |f| %>
      <%= f.radio_button :address, "true" %>
      <%= label :address, "ご自身の住所", value: "true" %>
      <%= Order.address %>
      <%= f.radio_button :address, "false" %>
      <%= label :address, "登録済み住所から選択", value "false" %>
      <%= f.radio_button :モデル %>
      <%= label :address, "新しいお届け先", value: "false"%>
      郵便番号（ハイフンなし）
      <%= f.text_area :postal_code %>
      住所
      <%= f.text_area :address %>
      宛名
      <%= f.text_area :name %>

      <%= f.submit "確認画面に進む", class: "btn btn-primary" %>
    <% end %>





</div>